@model AlasTech.Models.GorunumModelleri.KayitGorunumModeli

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<style>
    .kullanici-duzenle-formu {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .kullanici-duzenle-formu h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-grup {
        margin-bottom: 15px;
    }

        .form-grup label {
            display: block;
            margin-bottom: 5px;
        }

        .form-grup input, .form-grup select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

    .duzenle-buton {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .duzenle-buton:hover {
            background-color: #0056b3;
        }

    .hata-mesaj {
        color: #dc3545;
        text-align: center;
        margin-bottom: 15px;
    }

    .satici-bilgi {
        margin-top: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        display: none;
    }
</style>

<div class="kullanici-duzenle-formu">
    <h2>Kullanıcı Düzenle</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="hata-mesaj">
            @Html.ValidationSummary(true)
        </div>
    }

    <form asp-controller="Yonetici" asp-action="KullaniciDuzenle" asp-route-id="@ViewBag.KullaniciId" method="post">
        <div class="form-grup">
            <label asp-for="KullaniciAdi">Kullanıcı Adı</label>
            <input asp-for="KullaniciAdi" />
            <span asp-validation-for="KullaniciAdi" class="hata-mesaj"></span>
        </div>

        <div class="form-grup">
            <label asp-for="Sifre">Şifre</label>
            <input asp-for="Sifre" type="password" />
            <span asp-validation-for="Sifre" class="hata-mesaj"></span>
        </div>

        <div class="form-grup">
            <label asp-for="Eposta">E-posta</label>
            <input asp-for="Eposta" type="email" />
            <span asp-validation-for="Eposta" class="hata-mesaj"></span>
        </div>

        <div class="form-grup">
            <label asp-for="AdSoyad">Ad Soyad</label>
            <input asp-for="AdSoyad" />
            <span asp-validation-for="AdSoyad" class="hata-mesaj"></span>
        </div>

        <div class="form-grup">
            <label asp-for="Rol">Rol</label>
            <select asp-for="Rol" onchange="rolDegisti(this)">
                <option value="Musteri">Müşteri</option>
                <option value="Satici">Satıcı</option>
                <option value="Yonetici">Yönetici</option>
            </select>
            <span asp-validation-for="Rol" class="hata-mesaj"></span>
        </div>

        <div class="satici-bilgi" id="saticiBilgi">
            <h4>Satıcı Bilgileri</h4>
            <div class="form-grup">
                <label asp-for="MagazaAdi">Mağaza Adı</label>
                <input asp-for="MagazaAdi" />
                <span asp-validation-for="MagazaAdi" class="hata-mesaj"></span>
            </div>

            <div class="form-grup">
                <label asp-for="Adres">Adres</label>
                <input asp-for="Adres" />
                <span asp-validation-for="Adres" class="hata-mesaj"></span>
            </div>

            <div class="form-grup">
                <label asp-for="Telefon">Telefon</label>
                <input asp-for="Telefon" />
                <span asp-validation-for="Telefon" class="hata-mesaj"></span>
            </div>
        </div>

        <button type="submit" class="duzenle-buton">Kaydet</button>
    </form>
</div>

<script>
    function rolDegisti(select) {
        var saticiBilgi = document.getElementById("saticiBilgi");
        if (select.value === "Satici") {
            saticiBilgi.style.display = "block";
        } else {
            saticiBilgi.style.display = "none";
        }
    }

    // Sayfayı yüklerken mevcut rolü kontrol et
    window.onload = function () {
        var rolSelect = document.querySelector('select[name="Rol"]');
        rolDegisti(rolSelect);
    };
</script>