@model List<AlasTech.Models.GorunumModelleri.UrunGorunumModeli>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .banner {
        background-color: #f8f9fa;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
        border-radius: 5px;
    }

        .banner img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

    .urun-izgara {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .urun-kart {
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        border-radius: 8px;
        background-color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .urun-kart:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

    .urun-resim-konteyner {
        position: relative;
        width: 100%;
        padding-top: 100%; /* 1:1 oran için (kare) */
        margin-bottom: 10px;
        overflow: hidden;
        border-radius: 5px;
        border: 1px solid #eee;
    }

    .urun-resim {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

        .urun-resim:hover {
            transform: scale(1.05); /* Hover'da hafif büyüme efekti */
        }

    .urun-fiyat {
        color: #e44d26;
        font-weight: bold;
        margin: 10px 0;
        font-size: 16px;
    }

    .arama-cubugu {
        margin-bottom: 20px;
        text-align: center;
    }

        .arama-cubugu input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 5px 0 0 5px;
        }

        .arama-cubugu button {
            padding: 10px 20px;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }

            .arama-cubugu button:hover {
                background-color: #0056b3;
            }

    .canli-destek {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #f4a261;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        font-size: 16px;
        font-weight: bold;
        z-index: 1000;
    }

        .canli-destek img {
            width: 24px;
            height: 24px;
            vertical-align: middle;
        }

    /* Yıldız puanı stilleri */
    .yildiz-puan {
        margin: 5px 0;
        font-size: 14px;
        color: #666;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    .yildizlar {
        position: relative;
        display: inline-block;
        font-size: 16px;
        color: #ddd; /* Boş yıldız rengi */
    }

        .yildizlar .dolu {
            position: absolute;
            top: 0;
            left: 0;
            overflow: hidden;
            color: #f4c430; /* Dolu yıldız rengi */
        }

    .puan-bilgi {
        font-size: 12px;
        color: #888;
    }
</style>

<div class="arama-cubugu">
    <form asp-controller="Urun" asp-action="Ara" method="get">
        <input type="text" name="kelime" placeholder="Ürün ara..." />
        <button type="submit">Ara</button>
    </form>
</div>

<div class="banner">
    <img src="/resimler/bannerlar/banner.jpg" alt="Hoş Geldiniz Banner" />
    <h2>Hoş Geldiniz! En İyi Fırsatlar Burada!</h2>
    <p>Son teknoloji ürünler ve daha fazlası için doğru yerdesiniz.</p>
</div>

<h3>Öne Çıkan Ürünler</h3>
<div class="urun-izgara">
    @if (Model != null)
    {
        @foreach (var urun in Model)
        {
            double ortalamaPuan = urun?.OrtalamaPuan ?? 0.0;
            int puanVerenKisiSayisi = urun?.PuanVerenKisiSayisi ?? 0;
            double yildizGenislik = double.IsNaN(ortalamaPuan) || ortalamaPuan < 0 ? 0 : (ortalamaPuan / 5.0) * 80; // NaN ve negatif değerleri kontrol et
            string yildizStil = $"width: {yildizGenislik.ToString("F2")}px;"; // Stil string olarak oluşturuldu
            <div class="urun-kart">
                <a asp-controller="Urun" asp-action="Detay" asp-route-id="@urun.Id">
                    <div class="urun-resim-konteyner">
                        <img src="@urun.ResimUrl" alt="@urun.Ad" class="urun-resim" />
                    </div>
                    <h4>@urun.Ad</h4>
                    <p class="urun-fiyat">@urun.Fiyat TL</p>
                    <div class="yildiz-puan">
                        <div class="yildizlar">
                            <span>★★★★★</span>
                            <span class="dolu" style="@yildizStil">★★★★★</span>
                        </div>
                        <span class="puan-bilgi">
                            @if (puanVerenKisiSayisi > 0)
                            {
                                <text>@ortalamaPuan.ToString("F1") (@puanVerenKisiSayisi kişi puanladı)</text>
                            }
                            else
                            {
                                <text>Henüz puanlama yok</text>
                            }
                        </span>
                    </div>
                    <p>@urun.KategoriAdi - @urun.MagazaAdi</p>
                </a>
            </div>
        }
    }
    else
    {
        <p>Ürün bulunamadı.</p>
    }
</div>

<div class="canli-destek">
    <img src="resimler/canli-destek.png" alt="Canlı Destek" />
    Canlı Destek
</div>